clear; clc; clf
x1 = [1 3 5 7];
y1 = [1 4 3 5];

line(x1,y1,'Color','r')
ax1 = gca; % current axes
ax1.XColor = 'r';
ax1.YColor = 'r';

axes('Position',ax1.Position,...
    'XAxisLocation','top',...
    'YAxisLocation','right',...
    'Color','none', ...
    'XTick', x1);
hold on

